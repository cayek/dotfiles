#!/usr/bin/env python3
import os
import shutil
from pathlib import Path

HOME_DIR = Path("~/").expanduser()

# mount plain
if not (HOME_DIR / "plain/sync").exists():
    cmd = f"gocryptfs cipher plain"
    os.system(cmd)

# enable syncthing
cmd = f"systemctl --user start syncthing.service  "
os.system(cmd)

# start emacs deamon
cmd = f"emacsclient -ca false -e '(delete-frame)'"
if os.system(cmd) != 0:
    os.system("emacs --daemon")

# TODO start gpg agent ? add keys

# sync
if (HOME_DIR / "plain/sync").exists():
    os.system("mysync")
