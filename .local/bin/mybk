#!/usr/bin/env bash

HOST=$(hostname)

testssh () {
    ssh -q -o BatchMode=yes  -o StrictHostKeyChecking=no -o ConnectTimeout=5 $1 'exit 0'
}

bk ()
{
    if testssh bk; then
        rsync -avzL --delete \
            "${1}" "bk:/mnt/red/Backup/${HOST}/"
        echo `date` ": ${1} ok" | ssh bk -T "cat >> /mnt/red/Backup/${HOST}.log"
    fi
}

bk ~/.Private
bk ~/cipher
bk ~/.gnupg
bk ~/.ssh
bk ~/.zsh_history
